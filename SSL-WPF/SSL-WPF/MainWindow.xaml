<Window x:Class="SSL_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SSL_WPF"
      
        Title="SSL - Lane Simulator"
        WindowStartupLocation="CenterScreen"
        Height="450" Width="600"
        Loaded="Window_Loaded"
        >
        
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
       

        <Menu VerticalAlignment="Top" Margin="0,0,-0.4,0">
            <MenuItem x:Name="mnuFile"
    			Header="_File">
                <MenuItem x:Name="mnuFileNew"
    				Header="_New" />
                <Separator/>
                <MenuItem x:Name="mnuFileExit"
    				Header="E_xit" />
            </MenuItem>
            <MenuItem x:Name="mnuEdit"
    			Header="_Edit"/>
            <MenuItem  x:Name="mnuHelp"
    			Header="_Help">
                <MenuItem x:Name="AboutMenu"
    				Header="_About" />
            </MenuItem>
        </Menu>

        
        
        
        
    </Grid>
</Window>
