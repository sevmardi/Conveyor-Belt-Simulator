<Window x:Class="LaneSimulator.Views.SchedulerPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scheduler Panel" Height="150" Width="300" ResizeMode="NoResize" >


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" MinHeight="44" />
        </Grid.RowDefinitions>
        <Label Margin="10,10,10,10">How many trays?</Label>
        <Slider Grid.Column="1" Margin="10,10,10,46" Name="bitSlider" Minimum="1" Maximum="500000" Value="10" SmallChange="1" LargeChange="1" IsSnapToTickEnabled="True"    TickFrequency="1" />
        <Label Grid.Column="2" Margin="10,10,10,10" Name="lblBits" Content="{Binding ElementName=bitSlider, Path=Value}">
        </Label>

        <Button Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" Margin="0,0,10,10" Name="btnOK" Width="75" IsDefault="True" Click="btnOK_Click">OK</Button>
        <Button Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="67,0,0,10" Name="btnCancel" Width="75" IsCancel="True" Click="btnCancel_Click" Grid.ColumnSpan="2">Cancel</Button>
    </Grid>

</Window>
