<UserControl x:Class="LaneSimulator.SSLCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
             xmlns:lanes="clr-namespace:LaneSimulator.Lanes">



    <ScrollViewer Name="Scroller" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
                  SizeChanged="Scroller_SizeChanged" 
                  LayoutUpdated="Scroller_LayoutUpdated"
                  ScrollChanged="Scroller_ScrollChanged">
        <Canvas Name="GC" >

         
            <Canvas.Background>
                <!-- see http://mark-dot-net.blogspot.com/2007/06/creating-hatched-patterned-brush-in-wpf.html -->
                <VisualBrush TileMode="Tile" Viewport="0,0,32,32"  ViewportUnits="Absolute" Viewbox="0,0,32,32"  ViewboxUnits="Absolute">
                    <VisualBrush.Visual>
                        <Canvas>
                            <Rectangle Fill="LightGray" Width="32" Height="32" />
                            <Path Stroke="DarkGray" Data="M 0 0 l 0 32" />
                            <Path Stroke="DarkGray" Data="M 0 32 l 32 0" />
                        </Canvas>
                    </VisualBrush.Visual>
                </VisualBrush>


            </Canvas.Background>
            <Rectangle Name="dragSelect" Stroke="Blue" StrokeThickness="1" HorizontalAlignment="Left" Margin="0,0,0,0" Visibility="Hidden" />

            <lanes:SectionA Grid.Row="0" Grid.Column="1" x:Name="SectionA" Canvas.Left="-50" Canvas.Top="250"/>
            <lanes:SectionB Grid.Row="0" Grid.Column="1" x:Name="SectionB" Canvas.Left="290" Canvas.Top="225"/>
            
            
            <!--<Viewbox Stretch="Fill" Width="114" HorizontalAlignment="Right" Canvas.Left="1600" Canvas.Top="25">
                <Grid Height="96.907" Width="138.264">
                    <TextBox x:Name="textBox1_Copy1" Height="42.634" HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center" Text="Total" FontFamily="/WpfApplication1;component/Fonts/#LCD"
					Foreground="#FFB22121" Background="Black" FontSize="29.333" BorderThickness="2" Focusable="false"
					Cursor="Arrow" VerticalAlignment="Top" BorderBrush="{x:Null}"/>
                    <TextBox x:Name="total_text1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="0"
