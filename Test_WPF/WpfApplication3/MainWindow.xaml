<Window x:Class="WpfApplication3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="300" Width="300">
    <Window.Resources>
        <PathGeometry x:Key="path" Figures="M 0,50 A 50,50 0 1 1 100,50 " />
        <Storyboard x:Key="ellipseSB">
            <DoubleAnimationUsingPath Storyboard.TargetName="ellipse"
        		Storyboard.TargetProperty="(Canvas.Left)"
        		PathGeometry="{StaticResource path}"
        		Duration="0:0:2" RepeatBehavior="Forever"
        		 Source="X" />
            <DoubleAnimationUsingPath 
                Storyboard.TargetName="ellipse"
        		Storyboard.TargetProperty="(Canvas.Top)"
        		PathGeometry="{StaticResource path}"
        		Duration="0:0:2" RepeatBehavior="Forever"
        		 Source="Y" />
        </Storyboard>
    </Window.Resources>
    <Grid x:Name="grid">
        <Canvas>
            <Ellipse x:Name="ellipse" Width="12" Height="13" Stroke="Black" Fill="Black" RenderTransformOrigin="0.5,0.5" Canvas.Left="5" Canvas.Top="33" />
            <Path Stroke="Red" StrokeThickness="1" Canvas.Left="5" Canvas.Top="5"     Data="{StaticResource path}"/>
        </Canvas>
        <Button VerticalAlignment="Bottom" Content="Start" Click="Button_Click"/>
        <Button VerticalAlignment="Bottom" Content="Stop" Click="Stop_Click" Margin="0,0,0,25"/>
    </Grid>
</Window>